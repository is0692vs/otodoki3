{
  "name": "otodoki3 Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "npm install",
  "forwardPorts": [3000],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "GitHub.vscode-pull-request-github",
        "GitHub.codespaces",
        "GitHub.remotehub",
        "ms-vscode.remote-server",
        "ms-vscode-remote.vscode-remote-extensionpack",
        "saoudrizwan.claude-dev",
        "openai.chatgpt",
        "google.gemini-cli-vscode-ide-companion",
        "google.geminicodeassist",
        "mhutchie.git-graph",
        "donjayamanne.githistory",
        "github.vscode-github-actions",
        "eamodio.gitlens",
        "kilocode.kilo-code",
        "yzhang.markdown-all-in-one",
        "ms-vscode.vscode-websearchforcopilot",
        "Supabase.vscode-supabase-extension",
        "ms-playwright.playwright",
        "HirokiMukai.jules-extension"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "files.autoSave": "afterDelay"
      }
    }
  },
  "remoteEnv": {
    "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}",
    "GITHUB_PERSONAL_ACCESS_TOKEN": "${localEnv:GITHUB_PERSONAL_ACCESS_TOKEN}",
    "NOTION_API_KEY": "${localEnv:NOTION_API_KEY}",
    "QUERY_API_KEY": "${localEnv:QUERY_API_KEY}",
    "SUPABASE_ACCESS_TOKEN": "${localEnv:SUPABASE_ACCESS_TOKEN}",
    "SUPABASE_DB_PASSWORD": "${localEnv:SUPABASE_DB_PASSWORD}",
    "SUPABASE_PROJECT_REF": "${localEnv:SUPABASE_PROJECT_REF}",
    "SUPABASE_REGION": "${localEnv:SUPABASE_REGION}",
    "PATH": "${containerEnv:PATH}:/home/node/.local/bin"
  },
  "remoteUser": "node"
}
